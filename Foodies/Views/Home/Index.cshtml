<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="card shadow p-3 mb-5 bg-info bg-opacity-75">
            <h2>Todays Special</h2>
            <h6>Top Picks For You..!</h6>
        </div>
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-start">
                    @foreach (var food in Model.TodaysMenu)
                    {
                        <partial name="_FoodItemCard" model="food" />
                    }
            </div>
    </div>
</section>

<header class="bg-dark py-5 bg-opacity-50" style="background-image: url('/Images/background.jpg'); background-repeat: no-repeat; background-size: cover;">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h3 class="display-4 fw-bolder">Order Your Favourite Food In Just Few Clicks</h3>
            <p class="lead fw-normal text-white-80 mb-0">Check Out Discounts.!</p>
        </div>
    </div>
</header>


<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="card shadow p-3 mb-5 bg-info bg-opacity-75">
            <h2>Order Your favourite Dishes with Upto 10% Discount</h2>
            <h6>Hurry Up..! Discount Lasts till Today only!</h6>
        </div>
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-start">
            @foreach (var food in Model.TodaysDiscount)
            {
                <partial name="_FoodItemCard" model="food" />
            }
        </div>
    </div>
</section>

